	file = {Eagle et al_2021_Evaluation of a remote, internet-delivered version of the Trier Social Stress.pdf:files/7904/Eagle et al_2021_Evaluation of a remote, internet-delivered version of the Trier Social Stress.pdf:application/pdf;Eagle et al_2021_Evaluation of a remote, internet-delivered version of the Trier Social Stress.pdf:files/8260/Eagle et al_2021_Evaluation of a remote, internet-delivered version of the Trier Social Stress2.pdf:application/pdf;ScienceDirect Snapshot:files/7905/S0167876021001318.html:text/html;ScienceDirect Snapshot:files/8261/S0167876021001318.html:text/html},
