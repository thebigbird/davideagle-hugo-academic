	author = {Proeschold-Bell, Rae Jean and Molokwu, Nneka Jebose and Keyes, Corey L. M. and Sohail, Malik Muhammad and Eagle, David E. and Parnell, Heather E. and Kinghorn, Warren A. and Amanya, Cyrilla and Vann, Vanroth and Madan, Ira and Biru, Blen M. and Lewis, Dean and Dubie, Misganaw Eticha and Whetten, Kathryn},
	month = mar,
	year = {2019},
	pages = {143--153},
	file = {Proeschold-Bell_et_al_2019_Caring_and_thriving.pdf:files/3447/Proeschold-Bell_et_al_2019_Caring_and_thriving.pdf:application/pdf},
}

@article{eaglePerceivedSocialSupport2018,
